{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "..",
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "*": ["*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "../migrations/**/*.ts",
    "../scripts/**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": ["node_modules"]
}